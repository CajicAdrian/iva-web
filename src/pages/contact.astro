---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import Button from "../components/Button.astro";
import content_img from "../assets/images/contact_img.png";
const key = import.meta.env.PUBLIC_EMAIL;
---

<Layout title="Iva Valencic - Designer">
  <main>
    <section class="container layout_contact">
      <h3 class="">Send me <br class="mob_img" />a message</h3>
      <p>
        I would love to hear from you! Use this form to send me an email and ask
        any questions you may have.
      </p>
      <div>
        <form class="mail">
          <input type="hidden" name="access_key" value={key} />
          <label for="ime">Name and surname:</label>
          <input id="ime" name="ime" type="text" required />
          <label for="email">Email:</label>
          <input id="email" name="email" type="email" required />
          <label for="poruka">Text:</label>
          <textarea name="poruka" id="poruka" rows="10"></textarea>
          <Button id="contact">Reach Out</Button>
        </form>
      </div>
      <Image src={content_img} alt="Contact photo" title="contact img" />
    </section>
  </main>
</Layout>
<style>
  .layout_contact {
    display: flex;
    flex-wrap: wrap;
    margin: 30px auto;
  }
  .layout_contact h3 {
    width: 100%;
    margin-bottom: 10px;
  }
  .layout_contact img {
    width: 50%;
    position: relative;
    padding-left: 30px;
    filter: grayscale(100%);
    margin-top: 30px;
    transition: all 0.5s linear;
  }
  .layout_contact img:hover {
    filter: grayscale(0%);
  }
  .layout_contact div {
    width: 50%;
    border: 1px solid #000000;
    margin-top: 30px;
  }

  .mail {
    height: fit-content;
    padding: 50px 80px 0px 80px;
  }
  .mail input,
  .mail textarea {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    margin-top: 10px;
  }
  .mail input {
    border-top: 1px solid #000000;
    border-left: 1px solid #000000;
    border-bottom: none;
    border-right: none;
  }
  .mail textarea {
    border: 1px solid #000000;
    resize: none;
  }
  @media (max-width: 768px) {
    .layout_contact {
      display: flex;
      flex-wrap: wrap;
      margin: 30px auto;
      gap: 0;
    }
    .layout_contact h3 {
      font-size: 40px;
    }
    .layout_contact img {
      display: none;
    }

    .layout_contact div {
      width: 100%;
    }

    .mail {
      height: fit-content;
      padding: 30px 20px 0px 20px;
      overflow: hidden;
      margin: 0;
    }
  }
  @media only screen and (max-width: 1400px) and (min-width: 1200px) {
    .layout_contact img {
      width: 48%;
    }

    .layout_contact div {
      width: 48%;
    }
  }
  @media only screen and (max-width: 1200px) and (min-width: 760px) {
    .layout_contact img {
      display: none;
    }

    .layout_contact div {
      width: 88%;
    }
  }
  @media only screen and (max-width: 1400px) and (min-width: 760px) {
    .layout_contact h3 {
      font-size: 40px;
    }
    .layout_contact p {
      width: 90%;
    }

    .mail {
      height: fit-content;
      padding: 30px 20px 0px 20px;
      overflow: hidden;
      margin: 0;
    }
  }
</style>
