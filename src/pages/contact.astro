---
import Layout from '../layouts/Layout.astro';
import { Image } from "astro:assets";
import content_img from '../asssets/images/contact_img.png';
---

<Layout title="Iva Valencic - Designer">
    <main>

        <section class="container layout_contact">
            <h3 class="">Send me <br class="mob_img">a message</h3>
            <p>I would love to hear from you! Use this form to send me an email and ask any questions you may have.</p>
            <div>
                <form class="mail">
                    <label for="ime">Name and surname:</label>
                    <input id="ime" name="ime" type="text" required>
                    <label for="email">Email:</label>
                    <input id="email" name="email" type="email" required>
                    <label for="poruka">Text:</label>
                    <textarea name="poruka" id="poruka" rows="10"></textarea>
                    <section class="send">
                        <input type="submit" value="Reach Out" onclick="sendMail(); reset(); return false;">
                    </section>
                </form>
            </div>
            <Image src={content_img} alt="Contact photo" title= "contact img"/>
        </section>
    </main>
</Layout>
<style>
    .layout_contact {
    display: flex;
    flex-wrap: wrap;
    margin: 30px auto;
    
  }
  .layout_contact h3 {
    width: 100%;
    margin-bottom: 10px;
  }
  .layout_contact img {
    width: 50%;
    position: relative;
    padding-left: 30px;
    filter: grayscale(100%);
    margin-top: 30px;
    
  transition: all 0.5s linear;
  }
  .layout_contact img:hover {
    filter: grayscale(0%);
   
  }
  .layout_contact div {
    width: 50%;
    border: 1px solid #000000;
    margin-top: 30px;
  }
  
  .mail {
    height: fit-content;
    padding: 50px 80px 0px 80px;
  }
  .mail input,
  .mail textarea {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    margin-top: 10px;
  }
  .mail input {
    border-top: 1px solid #000000;
    border-left: 1px solid #000000;
    border-bottom: none;
    border-right: none;
  }
  .mail textarea {
    border: 1px solid #000000;
    resize: none;
  }
  .send input {
    width: fit-content;
    text-align: left;
    font-weight: 300;
    font-size: 16px;
    text-transform: uppercase;
    color: #000000;
    text-decoration: none;
    padding: 30px 40px;
    background-color: #fff;
    border-bottom: 1px solid #000000;
    border-left: 1px solid #000000;
    border-top: 1px solid #fff;
    border-right: 1px solid #fff;
    margin-bottom: 0;
  }
  
  .send input:hover {
    border-top: 1px solid #000000;
    border-right: 1px solid #000000;
  }
  
</style>