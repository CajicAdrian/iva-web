<script>
  import type { ViewTransitions } from "astro:transitions";

  const modal = document.getElementById("modal");
  const modalbtn = document.querySelectorAll(".modalbtn");
  const modalgalery = document.querySelectorAll(".modalgalery");
  const closebtn = document.getElementById("close");
  const right = document.getElementById("modal_right");
  const left = document.getElementById("modal_left");
  const carousel = document.querySelector(".carousel");

  let isMoving: boolean;
  let curentIndex = 1;
  const totalIndex = 6;

  function openModal(index) {
    modal.style.visibility = "visible";
    curentIndex = index + 1;
    moveSlider();
  }

  modalbtn?.forEach((btn, index) => {
    btn.addEventListener("click", () => {
      openModal(index);
    });
  });

  modalgalery.forEach((img, index) => {
    img.addEventListener("click", () => {
      curentIndex = index + 1;
      moveSlider();
    });
  });

  function closeModal() {
    modal.style.visibility = "hidden";
  }

  closebtn?.addEventListener("click", closeModal);

  function backgroundClick(e) {
    if (e.target == modal) {
      modal.style.visibility = "hidden";
    }
  }

  window.addEventListener("click", backgroundClick);

  function moveSlider() {
    const images = document.querySelectorAll(".carousel_img");
    const img = images[curentIndex];
    const currentHeight = img.offsetHeight;
    const imgWidth = img.clientWidth;
    console.log(imgWidth);

    const carouselWidth = carousel?.clientWidth;
    console.log(carouselWidth);

    if (curentIndex >= 0 && curentIndex < images.length) {
      carousel.style.maxHeight = `${currentHeight}px`;
    }

    carousel.style.transform = `translateX(-${curentIndex * carouselWidth}px)`;
  }

  function handleLeft() {
    if (isMoving) {
      return;
    }
    isMoving = true;
    curentIndex--;
    if (curentIndex < 0) {
      curentIndex = totalIndex - 1;
    }
    moveSlider();
    isMoving = false;
  }
  function handleRight() {
    if (isMoving) {
      return;
    }
    if (curentIndex >= totalIndex) {
      curentIndex = 0;
    }
    isMoving = true;
    curentIndex++;
    moveSlider();
    isMoving = false;
  }

  left?.addEventListener("click", handleLeft);
  right?.addEventListener("click", handleRight);
</script>
