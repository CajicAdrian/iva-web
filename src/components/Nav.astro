---
import { Image } from "astro:assets";
import iva_logo from "../assets/images/logo/iva_logo.svg"
---

<nav class="navbar">
  <section class="container">
    <a href="/projects/">Projects</a>

    <a href="/"
      ><Image src={iva_logo} class="logo" alt="Iva Valencic" title="iva_logo"/></a
    >
    <a href="/contact/">Contact</a>
  </section>
</nav>
<style>
  .navbar {
  border-top: 1px solid #000000;
  border-bottom: 1px solid #000000;
  height: fit-content;
  margin-top: 10px;
}
.logo {
  width: fit-content;
  height: 75px;
  transition: all 0.7s linear;
}
.logo:hover {
  transform: rotate(180deg);
}
.navbar a {
  color: black;
  text-decoration: none;
  font-weight: 700;
  font-size: 20px;
  letter-spacing: 0.11em;
  text-transform: uppercase;
  margin: auto 0;
}
.navbar a:hover {
  -webkit-text-stroke: 0.4px black;
  color: #fff;
}

@media (max-width: 768px) {
  .navbar a {
    font-size: 16px;
    letter-spacing: 0.1em;
  }
  .logo {
    height: 50px;
  }
}
</style>
