import popupad from "../asssets/images/projects/intention-keeper/pop_up_app_ad.jpg"
import intention from "../asssets/images/ui_design/intention_keeper.png"
---

<Layout title="Iva Valencic - Designer">
    <section class="Ostali_projekti">
        <a href="/jungle-portfolio">Jungle</a>
        <a href="/leko-i-partneri">Leko & Partneri</a>
        <a href="/intention-keeper" class="trenutno">Intention Keeper</a>
    </section>
    <main>
        <div class="mockup_right">
            <section class="container portfolio_ui_web">
                <div class="portfolio_ui_text">
                    <h3 class="h3_full">Intention Keeper</h3>
                    <h3>App Usage Manager</h3>
                    <p>informacije o aplikaciji
