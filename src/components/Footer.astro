---
import { Image } from "astro:assets";
import ivlogo from "../assets/images/logo/iva_valencic_logo.png";
import wapp from "../assets/images/icons/wapp.svg";
---

<footer>
  <div class="container footer">
    <div class="contact_footer">
      <a href="/"
        ><Image src={ivlogo} alt="Iva Valencic" title="iva valencic logo" /></a
      >
      <p>
        MESSAGE ME:<a href="https://wa.me/385991928005" target="_blank"
          ><Image src={wapp} alt="Wapp" title="wapp" /></a
        >
      </p>
      <p>
        SEND ME AN EMAIL: <a
          href="https://mail.google.com/mail/?view=cm&to=ivav3831@gmail.com"
          target="_blank">ivav3831@gmail.com</a
        >
      </p>
    </div>
    <nav class="nav_footer">
      <a href="/">Home</a>

      <a href="/projects/">Projects</a>

      <a href="/contact/">Contact</a>
    </nav>
  </div>
</footer>
<style>
  footer {
    border-top: 1px solid #000000;
    border-bottom: 1px solid #000000;
    display: flex;
    justify-content: space-between;
    padding: 5px 0;
    margin-bottom: 10px;
  }

  .contact_footer {
    height: fit-content;
    width: 50%;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    gap: 3%;
    padding: 5px 0;
  }

  .contact_footer img {
    width: fit-content;
    height: 85px;
    object-fit: scale-down;
    padding: 5px 0;
  }

  .contact_footer p {
    width: 100%;
    color: black;
    font-weight: 400;
    font-size: 12px;
    line-height: 33px;
    letter-spacing: 0.11em;
    padding: 5px 0;
  }
  .contact_footer p img {
    height: 40px;
    transform: translate(10px, 10px);
  }
  .contact_footer p a {
    text-decoration: none;
    color: #000;
  }
  .nav_footer {
    border: none;
    height: fit-content;
    width: 10%;
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
    padding-top: 15px;
    justify-content: space-between;
    padding: 5px 0;
  }

  .nav_footer a {
    width: 100%;
    font-family: "Playfair Display SC";
    font-weight: 700;
    font-size: 10px;
    letter-spacing: 0.11em;
    text-transform: uppercase;
    color: #000000;
    text-decoration: none;
    padding-top: 35px;
  }
  .nav_footer a:hover {
    -webkit-text-stroke: 0.2px black;
    color: #fff;
  }
  .active {
    font-style: italic;
  }
  @media only screen and (max-width: 768px) {
    .contact_footer {
      width: 100%;
      gap: 0;
    }

    .nav_footer {
      width: 100%;
    }

    .nav_footer a {
      width: 33.333333%;
      padding: 20px 0;
    }
  }
</style>
