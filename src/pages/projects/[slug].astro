---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import Button from "../../components/Button.astro";
import Modal from "../../components/Modal.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const projects = await getCollection("projects");

  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

type Props = {
  project: CollectionEntry<"projects">;
};
const projects = await getCollection("projects");
const { project } = Astro.props;
const {
  title,
  texttitle,
  textsubtitle,
  textparagraph,
  image,
  href,
  box1h,
  box1p,
  box2h,
  box2p,
  box3h,
  box3p,
  contentimage,
  content1h,
  content1image,
  content2h,
  content2image,
  content3h,
  content3image,
  content4h,
  images,
  images2,
  images3,
} = project.data;
---

<Layout title={title}>
  <main>
    <section class="Ostali_projekti">
      {
        projects.map((project) => (
          <a href={project.slug}>{project.data.title}</a>
        ))
      }
    </section>
    <div class="mockup_right">
      <section class="portfolio_ui_web">
        <div class="portfolio_ui_text">
          <h1>{texttitle}</h1>
          <h2>{textsubtitle}</h2>
          <p>{textparagraph}</p>
          <a href={href} target="_blank"
            ><Button id="project">figma prototype</Button></a
          >
        </div>
      </section>
      <Image
        src={image.src}
        alt={image.alt}
        width={700}
        height={700}
        class="projekt_web_img"
      />
    </div>
    <section class="desc">
      <div class="container">
        <div class="desc_box">
          <h5>{box1h}</h5>
          <p>{box1p}</p>
        </div>
        <div class="desc_box">
          <h5>{box2h}</h5>
          <p>{box2p}</p>
        </div>
        <div class="desc_box">
          <h5>{box3h}</h5>
          <p>{box3p}</p>
        </div>
      </div>
    </section>
    <section class="container">
      <div class="content">
        <Image
          src={contentimage.src}
          alt={contentimage.alt}
          width={500}
          height={500}
        />
        <h4 class="title_box">{content1h}</h4>
        <Image
          src={content1image.src}
          alt={content1image.alt}
          width={500}
          height={500}
        />
        <h4 class="title_box_right">{content2h}</h4>
        <Image
          src={content2image.src}
          alt={content2image.alt}
          width={500}
          height={500}
        />
        <h4 class="title_box">{content3h}</h4>
        <Image
          src={content3image.src}
          alt={content3image.alt}
          width={500}
          height={500}
        />
        <h4 class="title_box_right">{content4h}</h4>
      </div>
      <div class="container gallery web_img">
        {
          images.map((image, index) => (
            <Image
              src={image.src}
              alt={image.alt}
              class="modalbtn"
              width={500}
              height={500}
              id={`${index}`}
            />
          ))
        }
      </div>
      <div class="container gallery web_img">
        {
          images2.map((image, index) => (
            <Image
              src={image.src}
              alt={image.alt}
              class="modalbtn"
              width={500}
              height={500}
              id={`${index}`}
            />
          ))
        }
      </div>
    </section>
  </main>
  <div id="modal">
    <Button id="close">&times;</Button>
    <div class="modal-content">
      <section class="wrapper">
        <Button id="modal_left">&#10094;</Button>
        <div class="carousel">
          {
            images3.map((image, index) => (
              <Image
                src={image.src}
                alt={image.alt}
                width={500}
                height={500}
                class="carousel_img"
                id={`${index}`}
              />
            ))
          }
        </div>
        <Button id="modal_right">&#10095;</Button>
      </section>
      <div class="container gallery web_img">
        {
          images.map((image, index) => (
            <Image
              src={image.src}
              alt={image.alt}
              class="modalgalery"
              width={500}
              height={500}
              id={`${index}`}
            />
          ))
        }
      </div>
      <div class="container gallery web_img">
        {
          images2.map((image, index) => (
            <Image
              src={image.src}
              alt={image.alt}
              class="modalgalery"
              width={500}
              height={500}
              id={`${index}`}
            />
          ))
        }
      </div>
    </div>
  </div>
  <section class="Ostali_projekti">
    {projects.map((project) => <a href={project.slug}>{project.data.title}</a>)}
  </section>
</Layout>
<script>
  const modal = document.getElementById("modal");
  const modalbtn = document.querySelectorAll(".modalbtn");
  const modalgalery = document.querySelectorAll(".modalgalery");
  const closebtn = document.getElementById("close");
  const right = document.getElementById("modal_right");
  const left = document.getElementById("modal_left");
  const images = document.querySelectorAll(".carousel_img");
  const totalIndex = images.length;

  let isMoving: boolean;
  let curentIndex = 1;

  function openModal(index) {
    modal.style.visibility = "visible";
    curentIndex = index;
    moveSlider();
  }

  modalbtn?.forEach((btn, index) => {
    btn.addEventListener("click", () => {
      openModal(index);
    });
  });

  modalgalery.forEach((img, index) => {
    img.addEventListener("click", () => {
      curentIndex = index;
      console.log(curentIndex);

      moveSlider();
    });
  });

  function closeModal() {
    modal.style.visibility = "hidden";
  }

  closebtn?.addEventListener("click", closeModal);

  function backgroundClick(e) {
    if (e.target == modal) {
      modal.style.visibility = "hidden";
    }
  }

  window.addEventListener("click", backgroundClick);

  function moveSlider() {
    for (let i = 0; i < totalIndex; i++) {
      if (curentIndex === i) {
        images[i].style.display = "block";
      } else {
        images[i].style.display = "none";
      }
    }
  }

  function handleLeft() {
    if (isMoving) {
      return;
    }
    isMoving = true;
    curentIndex--;
    if (curentIndex < 1) {
      curentIndex = totalIndex;
    }
    moveSlider();
    isMoving = false;
  }
  function handleRight() {
    if (isMoving) {
      return;
    }
    isMoving = true;
    curentIndex++;
    if (curentIndex >= totalIndex) {
      curentIndex = 0;
    }
    moveSlider();
    isMoving = false;
  }

  left?.addEventListener("click", handleLeft);
  right?.addEventListener("click", handleRight);
</script>
