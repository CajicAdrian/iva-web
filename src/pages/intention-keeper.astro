---
import Layout from '../layouts/Layout.astro';
import { Image } from "astro:assets";
import landing from "../asssets/images/projects/intention-keeper/landing_page.jpg"
import home from "../asssets/images/projects/intention-keeper/home.jpg"
import specific from "../asssets/images/projects/intention-keeper/lock.jpg"
import lock from "../asssets/images/projects/intention-keeper/lock.jpg"
import unlock from "../asssets/images/projects/intention-keeper/unlocked_apps.jpg"
import settings from "../asssets/images/projects/intention-keeper/settings.jpg"
import popuplock from "../asssets/images/projects/intention-keeper/pop_up_lock_screen.jpg"
import popupunlock from "../asssets/images/projects/intention-keeper/pop_up_lock_screen_unlocked_apps.jpg"
