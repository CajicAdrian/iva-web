---
interface Props {
  id?: "contact" | "projects" | "project" | "left" | "right" | string;
  type?: "submit" | string;
}

const { id } = Astro.props;
---

<button id={id}>
  <slot />
</button>

<style>
  button {
    width: fit-content;
    height: min-content;
    padding: 30px 40px;
    text-align: center;
    font-weight: 300;
    font-size: 16px;
    text-transform: uppercase;
    color: #000000;
    text-decoration: none;
    border-bottom: 1px solid #000000;
    border-left: 1px solid #000000;
    border-top: 1px solid #fff;
    border-right: 1px solid #fff;
    background-color: #fff;
  }

  button:hover {
    border-top: 1px solid #000000;
    border-right: 1px solid #000000;
  }
  #contact {
    margin-top: 20px;
  }
  #projects {
    border-left: 1px solid #fff;
    border-right: 1px solid #000000;
  }
  #projects:hover {
    border-left: 1px solid #000000;
  }
  #project {
    margin-top: 20px;
  }
  #left,
  #right {
    cursor: pointer;
    position: inherit;
    width: 40px;
    height: 61px;
    padding: 16px;
    margin-top: 150px;
    color: white;
    font-weight: bold;
    font-size: 20px;
    border-radius: 0 5px 5px 0;
    background-color: rgba(0, 0, 0, 0.8);
    z-index: 1;
  }
  #right {
    border-radius: 5px 0 0 5px;
    margin-left: 10px;
  }
  @media (max-width: 768px) {
    #contact {
      font-size: 12px;
      padding: 20px;
      margin: 15px auto;
    }
    #projects {
      font-size: 12px;
      padding: 20px 30px;
      border-right: 1px solid #fff;
      border-left: 1px solid #000000;
    }
    #left,
    #right {
      margin-top: 50px;
    }
  }
  @media only screen and (max-width: 1400px) and (min-width: 760px) {
    #contact {
      font-size: 12px;
      padding: 20px;
      margin: 20px 0;
    }
    #projects {
      font-size: 12px;
      padding: 15px 20px;
    }
    #left,
    #right {
      margin-top: 70px;
    }
  }
</style>
