  <style>
  .layout_ui h1 {
  width: 60%;
  margin: auto 0;
}
.layout_ui p {
  width: 40%;
  padding: 30px;
}
.layout_ui {
  border-bottom: 1px solid #000000;
  border-right: 1px solid #000000;
  margin: 50px auto;
}
.layout_mockup img {
  width: 70%;
  height: fit-content;
  padding-bottom: 10%;
  filter: grayscale(100%);
  transition: all 0.5s linear;
}
.layout_mockup img:hover {
  filter: grayscale(0%); 
}
.layout_mockup a {
  width: 20%;
}
.layout_mockup .btn {
  padding: 30px 40px;
  border-bottom: 1px solid #000000;
  border-right: 1px solid #000000;
  margin-top: auto;
}
.layout_mockup .btn:hover {
  border-top: 1px solid #000000;
  border-left: 1px solid #000000;
}
@media (max-width: 768px) {
 .layout_ui h1 {
    width: 100%;
    border-bottom: 1px solid #000000;
    border-right: 1px solid #000000;
    padding-bottom: 10px;
    padding-right: 20px;
    font-size: 40px;
  }
  .layout_ui p {
    width: 100%;
    padding: 20px 0;
  }
  .layout_ui {
    border-bottom: 0px;
    border-right: 0px;
    margin: 10px auto;
  }
  .layout_mockup img {
    width: 100%;
    padding-bottom: 20px;
    filter: grayscale(0);
  }

  .layout_mockup a {
    width: 50%;
  }
  .layout_mockup .btn {
    padding: 10px 10px;
    border-top: 1px solid #000000;
    border-left: 1px solid #000000;
    transform: translateX(100%);
  }
}
@media only screen and (max-width: 1400px) and (min-width: 760px) {
   .layout_ui h1 {
    width: 100%;
    border-bottom: 1px solid #000000;
    border-right: 1px solid #000000;
    padding-bottom: 10px;
    padding-right: 20px;
    font-size: 50px;
  }
  .layout_ui p {
    width: 100%;
    padding: 20px 0;
  }
  .layout_ui {
    border-bottom: 0px;
    border-right: 0px;
    margin: 10px auto;
  }
  .layout_mockup a {
    font-size: 12px;
    
  }
  .layout_mockup img {
    padding-bottom: 0;
    
  }
  .layout_mockup .btn {
    border-top: 1px solid #000000;
    border-left: 1px solid #000000;
    padding: 20px;

  }
  .color-change-image {
    filter: grayscale(100%);
  }
}

  </style>