---
interface Props {
  id: "send" | "btn" | string;
}

const { id } = Astro.props;
---

<button id={id}>
  <slot />
</button>

<style>
  button {
    width: fit-content;
    height: min-content;
    text-align: center;
    font-weight: 300;
    font-size: 16px;
    text-transform: uppercase;
    color: #000000;
    text-decoration: none;
    border: none;
    background-color: white;
  }
  #send {
    width: fit-content;
    text-align: left;
    font-weight: 300;
    font-size: 16px;
    text-transform: uppercase;
    color: #000000;
    text-decoration: none;
    padding: 30px 40px;
    background-color: #fff;
    border-bottom: 1px solid #000000;
    border-left: 1px solid #000000;
    border-top: 1px solid #fff;
    border-right: 1px solid #fff;
    margin-bottom: 0;
    margin-top: 20px;
  }
  #send input:hover {
    border-top: 1px solid #000000;
    border-right: 1px solid #000000;
  }
</style>
